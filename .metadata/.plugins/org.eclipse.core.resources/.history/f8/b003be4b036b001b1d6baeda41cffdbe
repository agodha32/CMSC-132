
public class asd {
	
	private static int num = 0;
	private int uniqueId;

	public static void main(String[] args) {

		System.out.println(uniqueIdCounter());
		
	}

	private int uniqueIdCounter() {
		
		int uniqueId = num++;
		num = uniqueId;
		
		return uniqueId;
		
	}
	
public static void resetIds() {
		
		num = 0;
		
	}
	
}
